<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.wms.warehousing.mapper.InbillDetailMapper">

    <resultMap type="com.ruoyi.wms.warehousing.domain.InbillDetail" id="InbillDetailResult">
        <result property="id" column="id"/>
        <result property="inBillCode" column="in_bill_code"/>
        <result property="goodsCode" column="goods_code"/>
        <result property="goodsName" column="goods_name"/>
        <result property="model" column="model"/>
        <result property="measureUnit" column="measure_unit"/>
        <result property="weight" column="weight"/>
        <result property="volume" column="volume"/>
        <result property="reportNum" column="report_num"/>
        <result property="inBillNum" column="in_bill_num"/>
        <result property="warranty" column="warranty"/>
        <result property="supplierCode" column="supplier_code"/>
        <result property="supplierName" column="supplier_name"/>
        <result property="num" column="num"/>
        <result property="takedTrayCount" column="taked_tray_count"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <select id="select" resultType="com.ruoyi.wms.warehousing.domain.InbillDetail">
        select
        id,
        in_bill_code,model,supplier_code,supplier_name,
        goods_code,
        goods_name,
        measure_unit,
        weight,
        volume,
        report_num,
        in_bill_num,
        warranty,
        num,
        taked_tray_count,
        del_flag,
        create_by,
        create_time,
        update_by,
        update_time,
        remark
        from
        wms_inbill_detail
        <where>
            ${ew.sqlSegment}
        </where>
    </select>
    <select id="compareNum" resultType="java.lang.Integer">
        select sum(if((report_num-in_bill_num) &lt;= 0,0,1)) from wms_inbill_detail where in_bill_code=#{inBillCode}
    </select>
    <select id="selectDataBySupplierCode" resultType="java.lang.Integer">
        select count(*) from wms_inbill_detail where del_flag='0' and supplier_code=#{supplierCode}
    </select>


    <update id="deleteNoExist">
        update wms_inbill_detail set del_flag = '1', update_by = #{username}, update_time = now()
        <where>
            and in_bill_code = #{inBillCode}
            <if test="ids!=null and ids.length>0">
                and id not in
                <foreach collection="ids" item="id" index="index" open="(" close=")" separator=",">
                    #{id}
                </foreach>
            </if>
        </where>
    </update>

</mapper>
