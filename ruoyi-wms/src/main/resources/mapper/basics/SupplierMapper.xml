<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.wms.basics.mapper.SupplierMapper">

    <resultMap type="com.ruoyi.wms.basics.domain.Supplier" id="SupplierResult">
        <result property="id" column="id"/>
        <result property="supplierCode" column="supplier_code"/>
        <result property="supplierName" column="supplier_name"/>
        <result property="supplierContactUser" column="supplier_contact_user"/>
        <result property="supplierPhone" column="supplier_phone"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <select id="select" resultType="com.ruoyi.wms.basics.domain.Supplier">
        select
        id,
        supplier_code,
        supplier_name,
        supplier_contact_user,
        supplier_phone,
        del_flag,
        create_by,
        create_time,
        update_by,
        update_time,
        remark
        from
        wms_warehouse_supplier
        <where>
            ${ew.sqlSegment}
        </where>
        order by create_time desc
    </select>
    <select id="checkCode" resultType="java.lang.Integer">
        select count(*) from wms_warehouse_supplier where del_flag='0' and supplier_code=#{object.supplierCode}
        <if test="object.id!=null and object.id!=''">
            and id != #{object.id}
        </if>
    </select>
    <select id="selectDataByCode" resultType="com.ruoyi.wms.basics.domain.Supplier">
        select * from wms_warehouse_supplier where del_flag='0' and supplier_code=#{supplierCode}
    </select>
    <select id="getSupplierData" resultType="java.util.Map">
        select supplier_code value,
        CONCAT(supplier_code,'-',supplier_name)   label
        from wms_warehouse_supplier
        where del_flag = '0'
    </select>
</mapper>
